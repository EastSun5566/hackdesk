{
  "name": "hackdesk",
  "description": "📝 A hackable HackMD desktop application",
  "private": true,
  "version": "0.0.7",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.1.0",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "frontend:dev": "vite",
    "frontend:build": "tsc && vite build",
    "frontend:preview": "vite preview",
    "lint:ts": "eslint . --ext ts,tsx --fix --cache",
    "lint:rs": "cd src-tauri && cargo fmt && cargo clippy --fix --allow-dirty --allow-staged && cd -",
    "lint": "npm run lint:ts && npm run lint:rs",
    "release": "npx standard-version && git push --follow-tags",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "author": "Michael Wang <michael19920327@gmail.com> (https://github.com/EastSun5566)",
  "repository": {
    "type": "git",
    "url": "https://github.com/EastSun5566/hackdesk"
  },
  "license": "AGPL-3.0",
  "dependencies": {
    "@hackmd/api": "^2.4.0",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@tauri-apps/api": "^1.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^0.2.1",
    "lucide-react": "^0.291.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.27.0",
    "tailwind-merge": "^2.5.3",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.6.2",
    "@types/node": "^20.16.11",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3",
    "vite": "^4.5.5",
    "vitepress": "1.4.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.(ts|tsx)": "pnpm run lint:ts",
    "*.rs": "pnpm run lint:rs"
  }
}
