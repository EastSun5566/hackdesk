{
  "build": {
    "beforeDevCommand": "pnpm frontend:dev",
    "beforeBuildCommand": "pnpm frontend:build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "HackDesk",
    "version": "0.0.0"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "scope": ["$HOME/.hackdesk/*"]
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.eastsun5566.hackmd",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "HackDesk",
        "width": 800,
        "height": 600,
        "label": "main",
        "url": "https://hackmd.io/login"
      }
    ]
  }
}
