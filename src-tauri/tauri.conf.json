{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HackDesk",
  "version": "../package.json",
  "identifier": "eastsun5566.github.hackdesk",
  "build": {
    "beforeDevCommand": "pnpm frontend:dev",
    "beforeBuildCommand": "pnpm frontend:build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "üìù A hackable HackMD desktop application",
    "shortDescription": "HackMD desktop app",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": [
          "'self'",
          "https://hackmd.io",
          "https://*.hackmd.io",
          "https://hackmd.io/*",
          "wss://hackmd.io",
          "wss://*.hackmd.io"
        ],
        "script-src": [
          "'self'",
          "'unsafe-eval'"
        ],
        "style-src": [
          "'self'",
          "'unsafe-inline'"
        ],
        "img-src": [
          "'self'",
          "https:",
          "http:",
          "data:",
          "blob:"
        ],
        "font-src": [
          "'self'",
          "data:"
        ],
        "media-src": [
          "'self'",
          "https:",
          "http:",
          "data:",
          "blob:"
        ],
        "worker-src": [
          "'self'",
          "blob:"
        ]
      },
      "capabilities": [
        "main-capability"
      ]
    },
    "trayIcon": {
      "iconPath": "icons/icon.png"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://hackdesk.vercel.app/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVEMkZGNDE2MUY2MUZBQjIKUldTeSttRWZGdlF2WFkxMGlRejhwejFobnNiU0p5MGxPOTlKVmlGWS82Um5aVmszWTZNQnNmeFcK"
    }
  }
}